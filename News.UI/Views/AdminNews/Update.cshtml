@model News.UI.Models.VM.AllNewsVM.AllNewsUpdateVM
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}

    <section class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Add Category</h3>
                    </div>
                    <form action="/AdminNews/Update" method="post" role="form" enctype="multipart/form-data">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="Header">Heade</label>
                                <input type="text" name="Header" class="form-control" placeholder="@Model.AllNewsS.Header" value="" />
                            </div>
                            <div class="form-group">
                                <label for="Description">Description</label>
                                <input type="text" name="Description" class="form-control" placeholder="@Model.AllNewsS.Description" value="" />
                            </div>
                            <div class="form-group">
                                <label for="Content">Content</label>
                                <input type="text" name="Content" class="form-control" placeholder="@Model.AllNewsS.Content" value="" />
                            </div>
                            <div class="form-group">
                                <label for="CategoryID">Categories</label>
                                <select name="CategoryID" class="form-control">
                                    @foreach (var item in Model.Categories)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <input class="hidden" name="ID" value="@Model.AllNewsS.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
